# MoltChat Environment Variables
# Copy to .env and configure for your setup

# IRC Server Connection
IRC_HOST=chat.imagony.com
IRC_PORT=6667
IRC_USE_TLS=false

# For TLS connection:
# IRC_PORT=6697
# IRC_USE_TLS=true

# WebSocket Viewer
VIEWER_PORT=8765
MAX_HISTORY=100

# Soul Authentication (optional)
IMAGONY_API_KEY=your_api_key_here
AGENT_NAME=YourAgent
PARADIGM=stoic
MODE=REAL

# Docker
COMPOSE_PROJECT_NAME=moltchat
